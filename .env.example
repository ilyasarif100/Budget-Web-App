# Plaid API Configuration Template
# Copy this file to .env and fill in your actual values

# Environment: 'sandbox', 'development', or 'production'
PLAID_ENV=sandbox

# Plaid API Keys (NEVER commit these to git!)
# Get from: https://dashboard.plaid.com/developers/keys
PLAID_CLIENT_ID=your_client_id_here
PLAID_SECRET_KEY=your_secret_key_here

# Server Configuration
PORT=3000
NODE_ENV=development

# Optional: Plaid webhook URL (for production)
# PLAID_WEBHOOK_URL=https://your-domain.com/api/webhooks/plaid

# Security Configuration
# Generate secure random keys: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
# Generate another: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your_jwt_secret_key_here
ENCRYPTION_KEY=your_encryption_key_here

# Allowed CORS origins (comma-separated, production only)
# ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Frontend Configuration (all values loaded from .env)
# Set to 'false' to disable authentication (for local use)
AUTH_REQUIRED=false
SYNC_ENABLED=true
EXPORT_ENABLED=true
DARK_MODE_ENABLED=true
APP_NAME=Budget Tracker
APP_VERSION=1.0.0
DEFAULT_PAGE_SIZE=50
VIRTUAL_SCROLL_BUFFER=5

